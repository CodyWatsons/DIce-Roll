import random

def play_game():
    print("Welcome to the Dice Roll Game!")
    print("Let's roll the dice.")

    while True:
        roll = input("Press Enter to roll the dice, or 'q' to quit: ")

        if roll.lower() == "q":
            print("Thanks for playing!")
            break

        dice_value = random.randint(1, 6)
        print(f"You rolled a {dice_value}!")

play_game()
